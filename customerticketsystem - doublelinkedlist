// DOUBLE LINKED LIST â€“ Ticket Management System

class Ticket {
    int ticketId;
    String customerName;
    String issueDescription;
    String priority;

    Ticket(int id, String name, String issue, String priority) {
        this.ticketId = id;
        this.customerName = name;
        this.issueDescription = issue;
        this.priority = priority;
    }
}

class Node {
    Ticket ticket;
    Node next;
    Node prev;

    Node(Ticket t) {
        this.ticket = t;
    }
}

class TicketQueue {
    private Node head;
    private Node tail;

    // Add ticket based on priority
    public void addTicket(int id, String name, String issue, String priority) {
        Node newNode = new Node(new Ticket(id, name, issue, priority));

        if (head == null) {
            head = tail = newNode;
            return;
        }

        if (priority.equals("Critical")) {
            newNode.next = head;
            head.prev = newNode;
            head = newNode;
        } 
        else if (priority.equals("High")) {
            Node current = head;

            while (current != null && current.ticket.priority.equals("Critical")) {
                current = current.next;
            }

            if (current == null) {
                tail.next = newNode;
                newNode.prev = tail;
                tail = newNode;
            } else {
                newNode.next = current;
                newNode.prev = current.prev;

                if (current.prev != null) {
                    current.prev.next = newNode;
                } else {
                    head = newNode;
                }
                current.prev = newNode;
            }
        } 
        else {
            tail.next = newNode;
            newNode.prev = tail;
            tail = newNode;
        }
    }

    // Resolve first ticket
    public void resolveTicket() {
        if (head == null) {
            System.out.println("No tickets to resolve.");
            return;
        }

        System.out.println("Resolved Ticket ID: " + head.ticket.ticketId);
        head = head.next;

        if (head != null)
            head.prev = null;
        else
            tail = null;
    }

    // Escalate ticket to front
    public void escalateTicket(int id) {
        Node node = findNode(id);
        if (node == null || node == head)
            return;

        if (node.prev != null)
            node.prev.next = node.next;
        if (node.next != null)
            node.next.prev = node.prev;
        if (node == tail)
            tail = node.prev;

        node.next = head;
        head.prev = node;
        node.prev = null;
        head = node;
    }

    // Cancel a ticket
    public void cancelTicket(int id) {
        Node node = findNode(id);

        if (node == null) {
            System.out.println("Ticket not found.");
            return;
        }

        if (node == head)
            head = node.next;
        if (node == tail)
            tail = node.prev;

        if (node.prev != null)
            node.prev.next = node.next;
        if (node.next != null)
            node.next.prev = node.prev;

        System.out.println("Cancelled Ticket ID: " + id);
    }

    // Find ticket position
    public int findTicket(int id) {
        Node current = head;
        int pos = 1;

        while (current != null) {
            if (current.ticket.ticketId == id)
                return pos;
            current = current.next;
            pos++;
        }
        return -1;
    }

    // Display all tickets
    public void listTickets() {
        if (head == null) {
            System.out.println("No tickets in queue.");
            return;
        }

        Node current = head;
        while (current != null) {
            Ticket t = current.ticket;
            System.out.println(
                "ID: " + t.ticketId +
                ", Name: " + t.customerName +
                ", Issue: " + t.issueDescription +
                ", Priority: " + t.priority
            );
            current = current.next;
        }
    }

    private Node findNode(int id) {
        Node current = head;
        while (current != null) {
            if (current.ticket.ticketId == id)
                return current;
            current = current.next;
        }
        return null;
    }
}

public class Main {
    public static void main(String[] args) {

        TicketQueue queue = new TicketQueue();

        queue.addTicket(101, "Abirami", "Login issue", "Normal");
        queue.addTicket(102, "Hari", "Payment failed", "High");
        queue.addTicket(103, "Nila", "System crash", "Critical");

        queue.listTickets();

        System.out.println("\nEscalating Ticket 101...");
        queue.escalateTicket(101);
        queue.listTickets();

        System.out.println("\nResolving Ticket...");
        queue.resolveTicket();
        queue.listTickets();

        System.out.println("\nTicket Position of 102: " + queue.findTicket(102));

        System.out.println("\nCancelling Ticket 102...");
        queue.cancelTicket(102);
        queue.listTickets();
    }
}
